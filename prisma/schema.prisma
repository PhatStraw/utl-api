generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Token {
  address  String  @id @db.VarChar(44)
  name     String
  symbol   String
  decimals Int     @db.SmallInt
  chainId  Int     @db.SmallInt
  holders  Int?
  verified Boolean
  logoURI  String

  tags Tag[]

  @@index([name])
  @@index([symbol])
  @@index([verified])
  @@index([chainId])
  @@map("token")
}

model Tag {
  address String @db.VarChar(44)
  tag     String

  Token Token @relation(fields: [address], references: [address], onDelete: Cascade)

  @@id([address, tag])
  @@unique([address, tag])
  @@map("tag")
}
